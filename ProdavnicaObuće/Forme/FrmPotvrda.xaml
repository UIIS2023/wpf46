<Window x:Class="ProdavnicaObuće.Forme.FrmPotvrda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdavnicaObuće.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni potvrdu" Height="200" Width="300">
    <Grid>
        <Label Content="Narudzbina:" HorizontalAlignment="Left" Margin="30,50,0,0" VerticalAlignment="Top" />
        <Label Content="Izvrsena transakcija:" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="cbxIzvrsena" Content="" HorizontalAlignment="Left" Margin="145,26,0,0" VerticalAlignment="Top" Width="16"/>
        <ComboBox x:Name="cbNarudzbina2" HorizontalAlignment="Left" Margin="145,50,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Cijena" SelectedValuePath="narudzbinaID"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="30,135,0,0" Width="75" VerticalAlignment="Top" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="180,135,0,0" Width="75" VerticalAlignment="Top" Click="btnOtkazi_Click"/>

    </Grid>
</Window>
